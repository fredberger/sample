<section class="content-header">
  <h1>
    Users show
    <small>A table with all users and basic information</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin"><i class="fa fa-dashboard"></i> Admin</a></li>
    <li><a href="/admin/users"><i class="fa fa-users"></i> Users</a></li>
    <li class="active">Show</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="box box-primary">
        <div class="box-body box-profile">
          <%= image_tag @user.avatar.url(:thumb), class: "profile-user-img img-responsive img-circle" %>

          <h3 class="profile-username text-center"><%= @user.name || @user.short_email %></h3>

          <p class="text-muted text-center"><%= @user.email %></p>

          <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
              <b>Followers</b> <a class="pull-right">1,322</a>
            </li>
            <li class="list-group-item">
              <b>Following</b> <a class="pull-right">543</a>
            </li>
            <li class="list-group-item">
              <b>Friends</b> <a class="pull-right">13,287</a>
            </li>
          </ul>

          <%= link_to edit_admin_user_path(@user), class: "btn btn-primary btn-block" do %>
            <b>Edit</b>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
